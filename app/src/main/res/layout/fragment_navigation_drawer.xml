<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.development.jaba.fragments.NavigationDrawerFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigationList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/drawer_background"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/fixedItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_states">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings_grey600_24dp"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="16sp"
                android:text="@string/nav_settings"
                android:textColor="@android:color/tertiary_text_light"
                android:focusable="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_states">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_live_help_grey600_24dp"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="16sp"
                android:text="@string/nav_about"
                android:textColor="@android:color/tertiary_text_light"
                android:focusable="false"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/fixedItems"
        android:background="@color/listCardBorder" />

</RelativeLayout>