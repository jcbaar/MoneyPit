<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_card_states"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:rowCount="1"
        android:stretchColumns="1">

        <TableRow>

            <ImageView
                android:id="@+id/carPicture"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/nopicture" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_gravity="right"
                        android:id="@+id/headerMenu"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#0000"
                        android:src="@drawable/card_menu_button_overflow_material"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/carMakeModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Peugeot 207"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/headerMenu" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/carBuildYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98-TX-NV (2007)"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/carAverages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg. 15L (EUR 32.36) per fill up"
                    android:textSize="15sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listDividerLight" />
</LinearLayout>
