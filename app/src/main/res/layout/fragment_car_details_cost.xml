<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.development.jaba.fragments.CarDetailsCostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/ListTertiaryText"
            android:id="@+id/costPerMonthLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/graph_fuel_cost"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/costPerMonth"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            style="@style/ListTertiaryText"
            android:id="@+id/costPerDistanceUnitLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/graph_fuel_cost_per_distance_unit"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/costPerDistanceUnit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
             />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
