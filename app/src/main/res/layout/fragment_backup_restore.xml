<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.development.jaba.moneypit.DriveBackupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:text="Backup database!"
        android:id="@+id/backup"
        android:enabled="false"
        android:layout_below="@+id/textView"
        style="@style/ActionButton" />

    <Spinner
        android:id="@+id/restore_list"
        android:layout_width="match_parent"
        android:layout_below="@+id/backup"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:text="Restore database!"
        android:id="@+id/restore"
        android:enabled="false"
        android:layout_below="@+id/restore_list"
        style="@style/ActionButton" />

    <com.development.jaba.view.CircularProgressView
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        app:cpvStartDelay="700" />
</RelativeLayout>