<resources>

    <!-- *** LIGHT THEME ******************************************************************** -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Non API-level specific customizations go here... -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="listCardRippleColor">@color/ripple_material_light</item>
        <item name="yearSpinnerBackgroundColor">@color/background_material_light</item>
        <item name="yearSpinnerTextColor">@color/abc_primary_text_material_light</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="dividerColor">@color/dividerColorLight</item>
        <item name="listCardBackground">@drawable/list_card_states</item>
        <item name="listCardBackgroundColor">@color/cardview_light_background</item>
        <item name="listCardBackgroundSelectedColor">@color/listCardBackgroundSelected</item>
        <item name="listCardPrimaryTextColor">@color/listCardText</item>
        <item name="listCardSecondaryTextColor">@color/listCardSecondaryText</item>
        <item name="emptyBackground">@color/emptyBackLight</item>
        <item name="emptyImage">@drawable/empty</item>
        <item name="chartAxisTextColor">@color/primary_text_default_material_light</item>
        <item name="chartBackgroundColor">@color/background_material_light</item>
        <item name="overflowButton">@drawable/card_menu_button_overflow_material</item>
        <item name="actionBarColor">@color/primaryColor</item>
        <item name="actionBarTextColor">@color/secondary_text_default_material_dark</item>
        <item name="actionBarSelectedTextColor">@color/primary_text_default_material_dark</item>
        <item name="actionBarIndicatorColor">@color/accentColor</item>
        <item name="navigationItem">@color/drawer_item</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background_material_light</item>

        <item name="actionModeStyle">@style/MoneyPitActionMode</item>
        <item name="android:actionModeStyle">@style/MoneyPitActionMode</item>
    </style>
    <!-- *** LIGHT THEME END **************************************************************** -->

    <!-- *** DARK THEME ********************************************************************* -->
    <style name="AppThemeDark" parent="AppThemeDark.Base">
        <!-- Non API-level specific customizations go here... -->
    </style>

    <style name="AppThemeDark.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="listCardRippleColor">@color/ripple_material_dark</item>
        <item name="yearSpinnerBackgroundColor">@color/background_material_dark</item>
        <item name="yearSpinnerTextColor">@color/abc_primary_text_material_dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="dividerColor">@color/dividerColorDark</item>
        <item name="listCardBackground">@drawable/list_card_states_dark</item>
        <item name="listCardBackgroundColor">@color/cardview_dark_background</item>
        <item name="listCardBackgroundSelectedColor">@color/listCardBackgroundSelectedDark</item>
        <item name="listCardPrimaryTextColor">@color/listCardTextDark</item>
        <item name="listCardSecondaryTextColor">@color/listCardSecondaryTextDark</item>
        <item name="emptyBackground">@color/emptyBackDark</item>
        <item name="emptyImage">@drawable/empty_dark</item>
        <item name="chartAxisTextColor">@color/primary_text_default_material_dark</item>
        <item name="chartBackgroundColor">@color/background_material_dark</item>
        <item name="overflowButton">@drawable/card_menu_button_overflow_material_dark</item>
        <item name="actionBarColor">@color/primaryColor</item>
        <item name="actionBarTextColor">@color/secondary_text_default_material_dark</item>
        <item name="actionBarSelectedTextColor">@color/primary_text_default_material_dark</item>
        <item name="actionBarIndicatorColor">@color/accentColor</item>
        <item name="navigationItem">@color/drawer_item_dark</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background_material_dark</item>

        <item name="actionModeStyle">@style/MoneyPitActionMode</item>
        <item name="android:actionModeStyle">@style/MoneyPitActionMode</item>
    </style>
    <!-- *** DARK THEME END ***************************************************************** -->

    <!-- *** DARK THEME ********************************************************************* -->
    <style name="AppThemeBlack" parent="AppThemeBlack.Base">
        <!-- Non API-level specific customizations go here... -->
    </style>

    <style name="AppThemeBlack.Base" parent="AppThemeDark">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="listCardBackground">@drawable/list_card_states_black</item>
        <item name="listCardBackgroundColor">@color/listCardBackgroundBlack</item>
        <item name="listCardBackgroundSelectedColor">@color/listCardBackgroundSelectedBlack</item>
        <item name="chartBackgroundColor">@android:color/black</item>
        <item name="dividerColor">@color/dividerColorBlack</item>
        <item name="emptyBackground">@color/emptyBackBlack</item>
        <item name="emptyImage">@drawable/empty_dark</item>
    </style>
    <!-- *** DARK THEME END ***************************************************************** -->

    <!-- Theme independent styles. -->

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="MoneyPitTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/actionBarIndicatorColor</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MoneyPitCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/actionBarSelectedTextColor</item>
        <item name="android:background">?attr/actionBarColor</item>
    </style>

    <style name="TintedImage">
        <item name="android:tint">?attr/listCardSecondaryTextColor</item>
    </style>

    <style name="MoneyPitCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/actionBarTextColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MoneyPitActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/actionBarColor</item>
    </style>

    <style name="MoneyPitToolBar" parent="Theme.AppCompat">
        <item name="android:background">?attr/actionBarColor</item>
        <item name="android:textColorPrimary">?attr/actionBarTextColor</item>
        <item name="android:textColorSecondary">?attr/actionBarTextColor</item>
        <item name="popupTheme">?attr/toolbarPopupTheme</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ListPrimaryText">
        <item name="android:textColor">?attr/listCardPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ListSecondaryText">
        <item name="android:textColor">?attr/listCardSecondaryTextColor</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ListTertiaryText">
        <item name="android:textColor">?attr/listCardSecondaryTextColor</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ActionImageButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="DatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="YearSpinnerText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:paddingLeft">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingRight">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
    </style>

    <style name="YearSpinnerDropDownText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?attr/yearSpinnerTextColor</item>
        <item name="android:paddingLeft">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingRight">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:paddingTop">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingBottom">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- The "overflow menu button" that is used in the RecyclerView items. -->
    <style name="OverflowMenuButton" parent="@android:style/Widget.Button">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:src">?attr/overflowButton</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
