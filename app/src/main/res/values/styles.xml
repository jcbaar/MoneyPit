<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Non API-level specific customizations go here... -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="actionModeStyle">@style/MoneyPitActionMode</item>
        <item name="android:actionModeStyle">@style/MoneyPitActionMode</item>
    </style>

    <style name="MoneyPitActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primaryColor</item>
    </style>

    <style name="MoneyPitToolBar" parent="Theme.AppCompat">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ListPrimaryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ListSecondaryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ListTertiaryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="NavigationItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ActionImageButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="FlatActionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/flat_button_states</item>
        <item name="android:textColor">@color/accentColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="DatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="YearSpinnerText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:paddingLeft">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingRight">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
    </style>

    <style name="YearSpinnerDropDownText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:paddingLeft">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingRight">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:paddingTop">@dimen/abc_dropdownitem_text_padding_left</item>
        <item name="android:paddingBottom">@dimen/abc_dropdownitem_text_padding_right</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
