<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="3dp" />
            <gradient
                android:startColor="@color/listCardBorderShadow"
                android:endColor="#FFFFFF"
                android:angle="90">
            </gradient>
        </shape>
    </item>
    <item android:bottom="3dp">
        <shape>
            android:shape="rectangle">
            <corners android:radius="3dp" />

            <solid android:color="@color/listCardBackground" />

            <stroke
                android:width="1dip"
                android:color="@color/listCardBorder" />
        </shape>
    </item>
</layer-list>