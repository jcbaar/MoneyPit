<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeStyle">@style/MoneyPitActionMode</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="DatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.Material.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ActionImageButton" parent="@android:style/Widget.Material.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:elevation">8dp</item>
    </style>

</resources>
